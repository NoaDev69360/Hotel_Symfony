{% extends 'base.html.twig' %}

{% block title %}Chambre index{% endblock %}

{% block body %}
    <h1 class="text-center">Mes chambres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>Type</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td>{{ chambre.id }}</td>
                <td>{{ chambre.numero }}</td>
                <td>{{ chambre.type }}</td>
                <td>{{ chambre.prix }}</td>
                <td>{{ chambre.description }}</td>
                <td>{{ chambre.image }}</td>
                <td>
                    <a href="{{ path('app_chambre_show', {'id': chambre.id}) }}">show</a>
                    <a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-primary"><a class="text-light" href="{{ path('app_chambre_new') }}">Create new</a></button>
    <button type="button" class="btn btn-primary"><a class="text-light" href="{{ path('app_client_index') }}">Mes clients</a></button>
{% endblock %}
